@import 'nib'
@import 'mixins'

.x-widgets-container 

  line-height 16px

  .panel-default 
    .panel-heading 
      background rgba(255, 255, 255, 0.7)
    
  .panel-selected
    panel-variant(#454545, rgba(255, 255, 255, 0.9), #2b2b2b, #454545)

  .x-widget 
    float left
    min-width 250px
    min-height 210px
    margin 0
    background rgba(0, 0, 0, 0.1)
    overflow hidden

    &:hover .x-tools
      opacity 1

  .x-header 
    position absolute
    padding 0
    width 100%
    height 30px
    top 0px
    z-index 9999
    /*transition all 0.3s*/

    h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
      float left
      margin-left 10px
      margin-top 8px
      line-height 13px
      font-size 12px
      text-overflow ellipsis
      text-shadow none
      /*transition all 0.3s*/
    
    .x-tools
      margin-top 6px
      margin-right 4px
      font-size 10px
      color #808080
      opacity 0

      span
        margin-left 5px
        color #a7a7a7
        font-size 12px
        cursor pointer

  .x-body 
    height 100%
    padding 0
  

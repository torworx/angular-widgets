@import "nib"

.x-widgets-container {

  line-height: 16px;

  .x-widget {
    float: left;
    min-width: 250px;
    min-height: 210px;
    border: 1px solid transparent;
    border-radius: 4px;
    background: rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .x-widget.x-selected {
    border: 1px solid #454545;

    .x-header {
      background: #2b2b2b;

      h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        color: rgba(255, 255, 255, 0.9);
      }
    }
  }

  .x-header {
    background: rgba(255, 255, 255, 0.7);
    position: absolute;
    width: 100%;
    height: 30px;
    top: 0px;
    text-align: center;
    z-index: 9999;
    transition: all 0.3s;

    h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
      padding: 0;
      line-height: 30px;
      font-size: 12px;
      margin: 0;
      text-align: center;
      text-overflow: ellipsis;
      text-shadow: none;
      transition: all 0.3s;
    }
    .x-toolbar-right {
      position: absolute;
      width: 30px;
      height: 100%;
      top: 0px;
      right: 0px;
      transition: all 0.2s;
      cursor: pointer;
    }
  }

  .x-body {
    height: 100%;
  }
}